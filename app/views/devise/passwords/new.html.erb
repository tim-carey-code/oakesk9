<div class="border p-3 border-danger col-xl-4 d-flex m-auto flex-column justify-content-center align-items-center">
  <h2>Forgot your password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {"data-turbo": "false", method: :post}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field text-center">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-danger m-2" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
