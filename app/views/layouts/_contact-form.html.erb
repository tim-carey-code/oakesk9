<section id="contact-us" class="mb-4">
  <%= image_tag('oakesBusinessCard.jpg', :title => "Oakes Business Card", :alt => 'Oakes Business card', :class => "d-block mx-auto img-fluid")  %>
  <br>
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-9 mb-md-0 mb-5">
      <%= form_for @contact, url: contact_path, remote: true do |f| %>
        <div class="row">
          <div class="col-md-6">
            <div class="md-form mb-0">
              <%= f.label "Name" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="md-form mb-0">
              <%= f.label "Email" %>
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="md-form mb-0">
              <%= f.label "Subject" %>
              <%= f.text_field :subject, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="md-form">
              <%= f.label "Message" %>
              <%= f.text_area :message, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="md-form">
            <%= f.hidden_field :to, value: "disinhumepa@gmail.com" %>
            <%= f.submit "Contact", class: "btn btn-primary form-control mt-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </form>
</div>
</div>
</section>
