<div class="text-center">
  <h1>Editing blog</h1>
  <% if @blog.user.id == current_user.id %>
    <%= render "form", blog: @blog %>
  <% else %>
    <p>You are not the owner of this blog post</p>
  <% end %>
  <br>
  <div class="d-flex justify-content-center flex-column align-items-center">
    <%= link_to "Show this blog", @blog, class: "btn btn-primary m-2" %>
    <%= link_to "Back to blogs", blogs_path, class: "btn btn-secondary" %>
  </div>
</div>
